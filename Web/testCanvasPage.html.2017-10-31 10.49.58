	{x:100,y:100,xSize:100,ySize:370,rotation:0},
	{x:1000,y:100,xSize:100,ySize:370,rotation:0}
	];
courseArcs = [
	{x:160,y:110,radius:30,startAngle:1*Math.PI,endAngle:1.5*Math.PI,counterClockwise:false,rotation:0},
	{x:1040,y:110,radius:30,startAngle:1.5*Math.PI,endAngle:0,counterClockwise:false,rotation:0},
	{x:160,y:460,radius:30,startAngle:0.5*Math.PI,endAngle:1*Math.PI,counterClockwise:false,rotation:0},
